{
  "bitwise": true,
  "immed": true,
  "newcap": true,
  "noarg": true,
  "noempty": true,
  "nonew": true,
  "trailing": true,
  "maxlen": 200,
  "boss": true,
  "eqnull": true,
  "expr": true,
  "globalstrict": true,
  "laxbreak": true,
  "loopfunc": true,
  "sub": true,
  "undef": true,
  "indent": 2,

  // Environments
  "browser"       : true,
  "devel"       : true,

  "globals": {

    /* angular.js */
    "angular": false,

    /* jasmine / karma */
    "it": false,
    "iit": false,
    "describe": true,
    "ddescribe": false,
    "beforeEach": false,
    "afterEach": false,
    "expect": false,
    "jasmine": false,
    "spyOn": false,
    "waits": false,
    "waitsFor": false,
    "runs": false,
    "dump": false,

    /* e2e */
    "browser": false,
    "element": false,
    "by": false
  }
}
